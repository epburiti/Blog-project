<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navBar.ejs') %>
<div class="container">
  <hr>
  <div class="card">
    <div class="card-header">
      <h2>Novo de Artigo</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="/articles/save">
        <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do Artigo"><br>
        <textarea name="body" id="article" class="form-control" placeholder="Escreva o artigo aqui"></textarea>
        <br>
        <label>Categoria</label>
        <select name="category" id="category" class="form-control">
          <% categories.forEach((element)=>{ %>
          <option value="<%= element.id %>"><%= element.title %></option>
          <% }) %>
        </select>
        <br>
        <button class="btn btn-success">Cadastrar</button>
      </form>
    </div>
  </div>

</div>

<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>

<script>
  tinymce.init({
    selector: "#article",
    plugins: [
      'advlist autolink image list print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
    ]
  });
</script>